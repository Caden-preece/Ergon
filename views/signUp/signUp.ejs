    <input type="text" name="email" id="inputEmail" class="form-control" placeholder="Email" autofocus>

    <label for="inputPassword">Password</label>
    <input type="text" name="password" id="inputPassword" class="form-control" placeholder="Password" autofocus>
    
    <label for="inputAccountType">Account Type</label>
    <input type="text" name="accountType" id="inputAccountType" class="form-control" placeholder="Business / Client" autofocus>
    <!-- Confirm Password -->

    <br/><button class="btn btn-lg btn-primary btn-block" type="submit">Create</button>
  </form>
</div>
