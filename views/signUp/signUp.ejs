<img src="/images/homeSlider.jpg" alt="">

<wrapper>
  
<form action="/users" method="post">
    <h2 class="form-signin-heading">Create an Account:</h2>

    <label for="email">Email:</label>
    <input type="text" name="email" id="inputEmail" placeholder="Email" autofocus>
    <br>

    <label for="password">Password:</label>
    <input type="text" name="password" id="inputPassword" placeholder="Password" autofocus>
    <br>
    
    <label for="accountType">Account Type:</label>
    <select name="accountType" id="inputAccountType" placeholder="Business / Client" autofocus>
      <option value="Business">Business</option>
      <option value="Client">Client</option>
      </select>
    <br>
    <!-- Confirm Password -->

    <br/><button class="btn btn-lg btn-primary btn-block" type="submit">Create</button>
  </form>
</wrapper>
